<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Actividades.PrincipalActivity"
    android:background="@drawable/fondo_internas">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/lyOpciones"
        android:layout_margin="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Semestre 1"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/blanco"
            android:theme="@style/RaisedButton"
            android:id="@+id/btSemestre1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Semestre 2"
            android:textSize="12sp"
            android:layout_marginLeft="2dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/blanco"
            android:theme="@style/RaisedButton"
            android:id="@+id/btSemestre2"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESPECIALIZACION"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@id/lyOpciones"
        android:textColor="@color/amarillo"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/tvEspecializacion"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEspecializacion"
        android:text="SEMESTRE"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blanco"
        android:id="@+id/tvSemestre"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSemestre"
        android:id="@+id/rvModulos">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
