    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.15"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.333"
            android:id="@+id/lyEscuela">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/casita"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/laescuela"
                android:textSize="15sp"
                android:textColor="@color/blanco"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/robotomedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.333"
            android:id="@+id/lyEspecializaciones">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/especializaciones"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/especializaciones"
                android:textSize="15sp"
                android:textColor="@color/blanco"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/robotomedium"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:layout_weight="0.333"
            android:id="@+id/lyUbicacion">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ubicacion"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/ubicacion"
                android:textSize="15sp"
                android:textColor="@color/blanco"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:fontFamily="@font/robotomedium"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
