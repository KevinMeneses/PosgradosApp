            android:layout_gravity="center"
            android:layout_marginRight="80dp"
            android:id="@+id/ivPqrs"/>

        <ImageView
            android:layout_width="155dp"
            android:layout_height="65dp"
            android:src="@drawable/logo_escuela"
            android:layout_gravity="center"/>

